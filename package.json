{
  "name": "statuspixel",
  "version": "1.0.0",
  "description": "openpixelcontrol client for status displays",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run git && npm run coffee",
    "demo": "npm run build && npm run simulator",
    "git": "git submodule update --init",
    "coffee": "find */* -name '*.coffee' -print0 | xargs -0 coffee -c",
    "simulator": "cd vendor/openpixelcontrol && make && bin/gl_server layouts/freespace.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eins78/statuspixel"
  },
  "keywords": [
    "openpixelcontrol",
    "opc",
    "neopixel",
    "fadecandy"
  ],
  "author": "Max F. Albrecht <1@178.is>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eins78/statuspixel/issues"
  },
  "homepage": "https://github.com/eins78/statuspixel",
  "dependencies": {
    "async": "^0.9.0",
    "lodash": "^2.4.1",
    "open-pixel-control": "^0.1.2",
    "request": "^2.51.0",
    "ruler": "^1.0.0",
    "winston": "^0.8.3"
  },
  "devDependencies": {
    "coffee-script": "^1.8.0"
  }
}
